    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTema</servlet-name>
        <url-pattern>/ServletTema</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <!--PARA VISITANTE-->
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/WEB-INF/main/*</url-pattern>
            <url-pattern>/WEB-INF/usuario/indexUsuario.jsp</url-pattern>
            <!--url-pattern>/WEB-INF/layout/*</url-pattern-->
            <include-prelude>/WEB-INF/layout/head.jspf</include-prelude>
            <include-coda>/WEB-INF/layout/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>*.jspf</url-pattern>
        </jsp-property-group>
        <!--PARA ADMINISTRADOR
        <jsp-property-group>
