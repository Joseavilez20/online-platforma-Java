    <servlet-mapping>
        <servlet-name>ServletUsuario_login</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLinker</servlet-name>
        <url-pattern>/ServletLinker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLinker</servlet-name>
        <url-pattern>/Cursos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLinker</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLinker</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name/>
