    </servlet>
    <servlet>
        <servlet-name>ServletTema</servlet-name>
        <servlet-class>controladores.ServletTema</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCurso</servlet-name>
        <url-pattern>/ServletCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletImg</servlet-name>
        <url-pattern>/ServletImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUsuario_login</servlet-name>
        <url-pattern>/ServletUsuario_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
