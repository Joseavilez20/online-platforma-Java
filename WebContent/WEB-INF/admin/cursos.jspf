        <div class="modal-footer">

          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Salir</button>

          <button type="submit" class="btn btn-primary btnActualizar" >Modificar curso</button>

        </div>

      </form>

    </div>

  </div>

</div>

